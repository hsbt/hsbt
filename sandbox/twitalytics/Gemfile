gem 'jquery-rails'

gem 'get_back'
gem 'resque'
gem 'twitter', '~> 2.0.2'

gem 'capistrano'
gem 'trinidad'
gem 'trinidad_diagnostics_extension'
gem 'trinidad_scheduler_extension'
gem 'trinidad_worker_extension'

gem "torquebox"

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :deploy do
  gem "net-ssh", require: "net/ssh"
  gem "net-scp", require: "net/scp"
  gem "warbler"
end

