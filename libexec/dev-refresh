#!/usr/bin/env bash

rbenv update

eval "$(rbenv init -)"

rbenv shell --unset

brew upgrade
brew cask upgrade

rbenv global 2.5
gem uninstall --force openssl zlib psych readline-ext
rbenv uninstall -f 2.8.0-dev
rbenv install 2.8.0-dev
rbenv global 2.8.0-dev

rbenv shell 2.8.0-dev
gem update

rbenv shell 2.5
dev all-pristine
rbenv shell 2.6
dev all-pristine
rbenv shell 2.7
dev all-pristine
rbenv shell 2.8
dev all-pristine

dev gem-shebang-update

rbenv shell --unset

pyenv update
pip freeze --local | grep -v '^\-e' | cut -d = -f 1 | xargs -n1 pip install -U

nodenv update
npm update -g

rustup update
cargo install-update -a
