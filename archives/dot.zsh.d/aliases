# global alias
alias -g L='| less'
alias -g G='| grep'
alias -g H='| head'
alias -g T='| tail'

alias -g r='rails'
alias g='git'
alias b='bundle'
alias be='bundle exec'
alias bo='bundle open'
alias bu='bundle update'

alias reload='source $HOME/.zshrc'
alias s3='s3cmd'

alias grep="grep --color=auto --binary-files=without-match --directories=recurse"
alias ls="gls --color"
alias la='ls -lhAF'
alias ll='ls -al'
