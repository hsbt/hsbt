[init]
	defaultBranch = master

[core]
	whitespace = space-before-tab, trailing-space, cr-at-eol
	editor = vim
	precomposeunicode = true
	commentchar = |
	pager = diff-so-fancy | less --tabs=4 -RFX

[user]
	name = Hiroshi SHIBATA
	email = hsbt@ruby-lang.org
	signingkey = F9CF13417264FAC2

[commit]
	gpgsign = true

[credential]
	helper = osxkeychain

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	features = line-numbers decorations
	whitespace-error-style = 22 reverse

[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[color]
	ui = auto

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[branch]
	autosetupmerge = true
	autosetuprebase = always
	sort = -authordate

[merge]
	ff = false
	renameLimit = 999999

[pull]
	rebase = false

[diff]
	algorithm = patience
	noprefix = true
	compactionHeuristic = true
	wsErrorHighlight = all

[push]
	default = current
	autoSetupRemote = true

[fetch]
	prune = true
	parallel = 8

[submodule]
	fetchJobs = 8

[checkout]
	defaultRemote = origin

[log]
	date = iso

[github]
	user = hsbt

[heroku]
	account = hsbt

[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true

[alias]
	a  = add -A
	b  = branch
	ba = branch -a
	bc = !git branch --merged | grep -Ev '\\*|main|master|development' | xargs git branch -d
	c  = commit -S
	aic = "!f() { COMMITMSG=$(copilot -s --model gpt-5-mini -p 'Generate ONLY a one-line Git commit message in English, using imperative mood, summarizing what was changed and why, based strictly on the contents of `git diff --cached`. Do not add explanation or a body. Output only the commit summary line.'); git commit -S -m \"$COMMITMSG\" -e; }; f"
	ca = commit -S --amend
	co = checkout
	d  = diff
	ds = diff --staged
	dn = diff --name-only
	ga = gc --aggressive
	up = !git pull --rebase --prune $@ && git submodule update --init --recursive
	s  = status -sb
	t  = tag -s
	rv = remote -v
	l  = log --decorate
	lo = log --decorate --oneline
	lp = log --decorate -p
	lpf = log --decorate -p --follow

[blame]
	ignoreRevsFile = .git-blame-ignore-revs
[advice]
	detachedHead = false
[rebase]
	autostash = true
	abbreviateCommands = true
	autosquash = true
[protocol "file"]
	allow = always
[pack]
	allowPackReuse = multi
